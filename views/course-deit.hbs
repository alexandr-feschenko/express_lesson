<h1>Update course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field col s6">
        <input placeholder="Course name" name="title" id="title" type="text" class="validate" value={{course.title}} required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Name is required"></span>
    </div>
    <div class="input-field col s6">
        <input placeholder="Price" name="price" id="price" type="number" class="validate" value={{course.price}} required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Price is required"></span>
    </div>
    <div class="input-field col s6">
        <input placeholder="Image" name="img" id="img" type="text" class="validate" value={{course.img}} required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Image is required"></span>
    </div>
    <button class="btn btn-primary">Add course</button>
</form>